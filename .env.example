# ================================================================================
# Environment Variables Template - Brothers Cash & Carry
# ================================================================================
# Copy this file to .env.local and fill in your actual values
# Quality @ Affordability - United Brothers AB

# WordPress Configuration
NEXT_PUBLIC_WORDPRESS_URL="https://your-wordpress-site.com"
NEXT_PUBLIC_WORDPRESS_API_URL="https://your-wordpress-site.com/wp-json"
WORDPRESS_API_URL="https://your-wordpress-site.com/wp-json"

# WooCommerce REST API Credentials
WORDPRESS_CONSUMER_KEY="your_consumer_key_here"
WORDPRESS_CONSUMER_SECRET="your_consumer_secret_here"

# Fourlines MCP API (Optional - for advanced shipping calculations)
FOURLINES_MCP_KEY="your_mcp_key_here"
NEXT_PUBLIC_FOURLINES_MCP_KEY="your_mcp_key_here"

# Cache Revalidation
WORDPRESS_WEBHOOK_SECRET="your-webhook-secret"

# Simple JWT Login Plugin Configuration
# This AUTH_KEY must match the setting in WordPress: Settings → Simple JWT Login → Settings
SIMPLE_JWT_AUTH_KEY="your-auth-key-here"

# Site URL - Update for production
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Email Configuration (One.com SMTP)
SMTP_HOST="send.one.com"
SMTP_PORT=465
SMTP_SECURE="ssl"
SMTP_USER="your-email@cashncarry.se"
SMTP_PASS="your-password"
ADMIN_EMAIL="admin@cashncarry.se"
SECONDARY_ADMIN_EMAIL="info@cashncarry.se"
FROM_EMAIL="admin@cashncarry.se"

# Stripe Configuration (Use test keys for development)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_key_here"
STRIPE_SECRET_KEY="sk_test_your_key_here"

# WhatsApp Configuration
